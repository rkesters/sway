{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [ "es2020", "DOM"],
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["mocha", "node"]
  },
  "exclude": ["node_modules"],
  "include": [ "./src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
